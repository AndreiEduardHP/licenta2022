<h2>Conectare</h2>

<%= form_with local: true ,url: sign_in_path do |form| %>

<div class="mb-3">
    <%= form.label :email %>
    <%= form.text_field :email, class: "form-control", placeholder: "adresata@mail.com"%>
</div>

<div class="mb-3">
    <%= form.label :parola %>
    <%= form.password_field :password, class: "form-control", placeholder: "parola"%>
    <%= link_to "Ai uitate parola?", password_reset_path %>
</div>

<div class="mb-3">
<%= form.submit "Conectare", class: "btn btn-dark" %>
</div>
<% end %>